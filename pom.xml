	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<final.war.name>rmspogfo</final.war.name>
		<jersey.version>2.19</jersey.version>
		<spring.version>4.3.25.RELEASE</spring.version>
